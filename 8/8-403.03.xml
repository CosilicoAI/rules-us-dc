      <akn:section eId="sec_8_403_03">
        <akn:num>8-403.03</akn:num>
        <akn:heading>Signs posted for exterior application.</akn:heading>
<akn:subsection eId="subsec_8-403_03_a">
      <akn:num>(a)</akn:num>
      <akn:content><akn:p>Any person applying pesticides to a lawn or to exterior landscape plants shall post at the time of application a sign containing a uniform statement approved by the Mayor.</akn:p></akn:content>
    </akn:subsection><akn:subsection eId="subsec_8-403_03_b">
      <akn:num>(b)</akn:num>
      <akn:content><akn:p>The sign shall remain for 48 hours following the pesticide application, after which time the property owner shall be responsible for the removal of the sign.</akn:p></akn:content>
    </akn:subsection><akn:subsection eId="subsec_8-403_03_c">
      <akn:num>(c)</akn:num>
      <akn:content><akn:p>The sign shall be clearly visible:</akn:p></akn:content>
    </akn:subsection>
      </akn:section>
