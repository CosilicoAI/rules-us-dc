      <akn:num>(b)</akn:num>
      <akn:content><akn:p>The party seeking to hold the director liable:</akn:p></akn:content>
    </akn:subsection><akn:subsection eId="subsec_29-406_31_c">
      <akn:num>(c)</akn:num>
      <akn:content><akn:p>Nothing contained in this section:</akn:p></akn:content>
    </akn:subsection><akn:subsection eId="subsec_29-406_31_d">
      <akn:num>(d)</akn:num>
