      <akn:section eId="sec_2_578">
        <akn:num>2-578</akn:num>
        <akn:heading>Record of meetings.</akn:heading>
<akn:subsection eId="subsec_2-578_a">
      <akn:num>(a)</akn:num>
      <akn:content><akn:p>All meetings of public bodies, whether open or closed, shall be recorded by electronic means; provided, that if a recording is not feasible, detailed minutes of the meeting shall be kept.</akn:p></akn:content>
    </akn:subsection><akn:subsection eId="subsec_2-578_b">
      <akn:num>(b)</akn:num>
